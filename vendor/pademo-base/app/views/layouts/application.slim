html 
  head
    link rel="stylesheet" href="/assets/application.css"
    - if settings.gem_style
      link rel="stylesheet" href="/#{settings.prefix}/assets/#{settings.gem_style}.css"

  body
    h1 Pademo - Gemified Padrino
    ul#navlist
      li: a href="/" Home 
      li: a href="/foo" Foo 
      - if logged?
        li 
          |(#{logged_user})
          a href="/sessions/logout" Logout
      - else
        li: a href="/sessions/login" Login 
    hr

    = yield
